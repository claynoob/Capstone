@using MVCSports.Models;
@model IEnumerable<MVCSports.Models.Equipment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sport")
        </th>
        <th>
            @Html.DisplayName("Type of Equipment")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id, category=item.category, type=item.type}) |
            @Html.ActionLink("Details", "Details", new { id = item.id, category = item.category, type = item.type }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id, category = item.category, type = item.type })
        </td>
    </tr>
}

</table>
